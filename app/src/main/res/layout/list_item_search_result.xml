<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="obj"
            type="com.warlock.tmdb.util.Constant" />

        <variable
            name="movie"
            type="com.warlock.tmdb.data.db.entity.MovieResult" />
    </data>

    <androidx.cardview.widget.CardView
        android:backgroundTint="?attr/colorSurface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_2sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ccParent"
            android:paddingEnd="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivBanner"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="0dp"
                imageUrl="@{(movie.posterPath!=null) ? obj.TALL_POSTER_PATH + movie.posterPath : obj.TALL_POSTER_PATH + movie.backdropPath}"

                android:src="@drawable/video"
                android:layout_margin="@dimen/_5sdp"
                app:layout_constraintDimensionRatio="2:3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvMovieTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginStart="@dimen/_10sdp"
                android:paddingVertical="@dimen/_3sdp"
                android:text="@{movie.title}"
                android:textColor="?attr/colorError"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintStart_toEndOf="@id/ivBanner"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tvMovieOverview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="3"
                android:padding="@dimen/_1sdp"
                android:text="@{movie.overview}"
                android:textColor="?attr/colorOnSurface"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toStartOf="@id/tvMovieTitle"
                app:layout_constraintTop_toBottomOf="@id/tvMovieTitle" />

            <TextView
                android:id="@+id/tvGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:padding="@dimen/_1sdp"
                genreFromIds="@{movie.genreIds}"
                android:textColor="?attr/colorOnSurface"
                android:textSize="@dimen/_9ssp"
                android:paddingVertical="@dimen/_3sdp"
                app:layout_constraintStart_toStartOf="@id/tvMovieTitle"
                app:layout_constraintBottom_toTopOf="@id/rating" />

            <androidx.appcompat.widget.AppCompatRatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/tvMovieTitle"
                app:layout_constraintBottom_toBottomOf="@id/ivBanner"
                android:id="@+id/rating"
                android:rating="1"
                android:numStars="1"
                android:stepSize="1"
                style="@android:style/Widget.Material.RatingBar.Small"
                android:progressBackgroundTint="@android:color/white"
                android:progressTint="@android:color/holo_orange_dark"
                android:secondaryProgressTint="@color/color_primary"
                android:layout_marginBottom="@dimen/_3sdp"
                />

            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="3"
                android:padding="@dimen/_1sdp"
                android:text="@{movie.voteAverage}"
                android:textColor="?attr/colorOnSurface"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintStart_toEndOf="@id/rating"
                app:layout_constraintTop_toTopOf="@id/rating" />

            <TextView
                android:id="@+id/tvReleaseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:padding="@dimen/_1sdp"
                fancyDate="@{movie.releaseDate}"
                android:textColor="?attr/colorOnSurface"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toStartOf="@id/ivBanner"
                app:layout_constraintTop_toBottomOf="@id/ivBanner" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>

