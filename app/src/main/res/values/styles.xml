<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Components-->
    <!--Bottom Sheets-->
    <style name="ThemeOverlay.TMDB.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.TMDB.BottomSheet.Modal
        </item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.TMDB.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            @android:color/transparent
        </item>
    </style>

    <style name="Widget.TMDB.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?shapeAppearanceLargeComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.TMDB.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?textAppearanceBody2</item>
    </style>

    <style name="Widget.TMDB.Header" parent="TextAppearance.TMDB.Headline6">
        <item name="fontFamily">serif-monospace</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.TMDB.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">?attr/colorButtonNormal</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>


    <style name="Widget.TMDB.TitleSmall" parent="TextAppearance.TMDB.Headline4">
        <item name="fontFamily">serif-monospace</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.TMDB.MicroTitle" parent="TextAppearance.TMDB.Headline6">
        <item name="fontFamily">serif-monospace</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.TMDB.MessageText" parent="TextAppearance.TMDB.Subtitle1">
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.TMDB.MessageSender" parent="TextAppearance.TMDB.Body1">
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.TMDB.ButtonText" parent="TextAppearance.TMDB.Headline4">
        <item name="fontFamily">serif-monospace</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0</item>
    </style>


    <style name="Widget.TMDB.BtnStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
        <item name="fontFamily">serif-monospace</item>
        <item name="android:textAppearance">@style/TextAppearance.TMDB.Headline5</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.TMDB.otpViewStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>
